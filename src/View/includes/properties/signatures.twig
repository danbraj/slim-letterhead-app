<label class="label">{{ property.desc }}{% if property.required %} <span class="required">*</span>{% endif %}</label>
{% if property.elements %}
<div class="control">
  <div class="select is-multiple">
    <select multiple size="6" name="{{ property.name }}[]">
      {% for item in property.elements %}
      <option value="{{ item.id }}"{% if item.id in property.value %} selected{% endif %}>{{ item.id }}. ({{ item.weight }}) {{ item.person }}</option>
      {% endfor %}
    </select>
  </div>
  <p class="help is-primary">Value: {{ property.value|join(', ', ' oraz ') }}</p> {# property.value|keys|join() #}
</div>
{% endif %}
{%- if property.errors %}
{%- for error in property.errors %}
<p class="help is-danger">{{ error }}</p>
{%- endfor %}
{%- endif %}