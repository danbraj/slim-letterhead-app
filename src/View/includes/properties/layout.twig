<label class="label">{{ property.desc }}{% if property.required %} <span class="required">*</span>{% endif %}</label>
{% if property.elements %}
<div class="control">
  <div class="select">
    <select name="{{ property.name }}">
      {% for item in property.elements %}
      <option value="{{ item.id }}"{{ property.value == item.id ? ' selected' : null }}>{{ item.id }}. {{ item.theme }}</option>
      {% endfor %}
    </select>
  </div>
</div>
{% else %}
<p>Brak szablonów</p>
{% endif %}
<p class="help is-primary">Value: {{ property.value }}</p>
<p class="help">Wybór szablonu</p>
{%- if property.errors %}
{%- for error in property.errors %}
<p class="help is-danger">{{ error }}</p>
{%- endfor %}
{%- endif %}