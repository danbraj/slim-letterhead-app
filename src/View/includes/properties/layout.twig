<label class="label">{{ property.desc }}</label>
<div class="control">
  {% if property.value %}
  <div class="select">
    <select name="{{ property.name }}">
      {% for item in property.value %}
      <option>{{ item.id }}. {{ item.theme }}</option>
      {% endfor %}
    </select>
  </div>
  {% else %}
  <p>Brak szablonów</p>
  {% endif %}
  <p class="help">Wybór szablonu</p>
</div>