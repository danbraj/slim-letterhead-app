{% extends 'layouts/page.twig' %}

{% set title = 'Documents' %}

{% block content %}
<h1>{{ title }}</h1>
<div class="buttons">
  <a href="{{ url_for('document.form') }}" class="button is-link">Add document</a>
</div>
<p>List of documents</p>
{% if documents %}
<table class="table is-hoverable" id="list">
  <thead>
    <tr>
      <th>Pos</th>
      <th>Id</th>
      <th>Name</th>
      <th>Header</th>
      <th>Content</th>
      <th>Type</th>
      <th>LayoutId</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for item in documents %}
    <tr>
      <td>{{ loop.revindex }}</td>
      <td>{{ item.id }}</td>
      <td>{{ item.name }}</td>
      <td>{{ item.header }}</td>
      <td>{{ item.content }}</td>
      <td>{{ item.type }}</td>
      <td>{{ item.layoutId }}</td>
      <td><a href="{{ url_for('document.build', {'id': item.id}) }}">PDF</a> | <a href="{{ url_for('document.form', {'id': item.id}) }}">Edit</a> | <a class="delete-action" data-id="{{ item.id }}">Delete</a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endif %}
<div class="buttons">
  <a href="{{ url_for('home') }}" class="button">Go to Homepage</a>
</div>
{% endblock %}

{% block javascripts %} 
<script>
  const list = document.getElementById('list');
  if (list) {
    list.addEventListener('click', function(e) {
      const el = e.target;
      if (el.classList.contains('delete-action') && confirm("Are you sure?")) {
        const itemId = el.dataset.id;
        const xhr1 = new XMLHttpRequest();
        const url = "{{ url_for('document.delete') }}" + itemId;
        xhr1.open('DELETE', url, true);
        xhr1.onreadystatechange = function() {
          if (this.readyState == 3) {
            console.log('Loading');
          }
          if (this.status == 200 && this.readyState == 4) {
            window.location.reload();
          }
        };
        xhr1.send();
      }
    });
  }
</script>
{% endblock %}