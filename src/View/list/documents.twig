{% extends 'layouts/page.twig' %}

{% set title = 'Documents' %}

{% block content %}
<h1>{{ title }}</h1>
<div class="buttons">
  <a href="{{ url_for('document.create') }}" class="button is-link">Add document</a>
</div>
<p>List of documents</p>
{% if documents %}
<table class="table is-hoverable">
  <thead>
    <tr>
      <th>Pos</th>
      <th>Id</th>
      <th>Name</th>
      <th>Content</th>
      <th>Type</th>
      <th>Preview</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for d in documents %}
    <tr>
      <td>{{ loop.revindex }}</td>
      <td>{{ d.id }}</td>
      <td>{{ d.name }}</td>
      <td>{{ d.content }}</td>
      <td>{{ d.type }}</td>
      <td>{{ d.preview }}</td>
      <td>Details | Pdf | Edit | Delete</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endif %}
{% endblock %}