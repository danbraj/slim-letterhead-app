{% extends 'layouts/page.twig' %}

{% set title = 'Documents' %}

{% block content %}
<h1>{{ title }}</h1>
<div class="buttons">
  <a href="{{ url_for('document.create') }}" class="button is-link">Add document</a>
</div>
<p>List of documents</p>
{% if documents %}
<table class="table is-hoverable">
  <thead>
    <tr>
      <th>Pos</th>
      <th>Id</th>
      <th>Name</th>
      <th>Header</th>
      <th>Content</th>
      <th>Type</th>
      <th>LayoutId</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for d in documents %}
    <tr>
      <td>{{ loop.revindex }}</td>
      <td>{{ d.id }}</td>
      <td>{{ d.name }}</td>
      <td>{{ d.header }}</td>
      <td>{{ d.content }}</td>
      <td>{{ d.type }}</td>
      <td>{{ d.layoutId }}</td>
      <td>Details | <a href="{{ url_for('document.build', {'id': d.id}) }}">PDF</a> | Edit | <a href="{{ url_for('document.delete', {'id': d.id}) }}">Delete</a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endif %}
<div class="buttons">
  <a href="{{ url_for('home') }}" class="button">Go to Homepage</a>
</div>
{% endblock %}